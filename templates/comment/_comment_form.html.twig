<h3 class="h6 pt-0 fw-normal">
    <i class="fas fa-user-circle fa-2x" style="vertical-align: middle;"></i>
    <span class="fw-bold">Ajouter un commentaire en tant que :</span> 
    {{ session_user.username }}
</h3>

<form action="{{ action }}" method="post" class="mt-3 needs-validation" novalidate>
    <div class="mb-3">
        <label for="content" class="visually-hidden">Commentaire</label>
        <textarea 
            class="form-control {{ errorMessage ? 'is-invalid' : '' }}" 
            id="content" 
            onKeyUp="validate(event)"
            name="content" 
            placeholder="Votre commentaire..." rows="3"
            minlength="3" maxlength="10000" required>{{ commentSubmitted is defined ? commentSubmitted : '' }}</textarea>
            <div class="invalid-feedback">
                Le commentaire doit faire entre 3 et 10000 caractÃ¨res.
            </div>
    </div>
    <div class="text-end mb-2">
        <input type="hidden" name="_csrf" value="{{ csrf_token() }}">
        <input type="reset" value="Annuler" class="button-outline">
        <button type="submit" class="button">Soumettre</button>
    </div>
</form>