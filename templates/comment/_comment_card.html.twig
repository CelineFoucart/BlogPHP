<div class="comment">
    <div class="row">
        <div class="col-md-6">
            <h3 class="author"><i class="fas fa-user"></i> {{ comment.author.username }}</h3>
        </div>
        <div class="col-md-6 text-end">
            <p class="date-comment"><i class="fas fa-clock"></i> {{ comment.createdAt|date('d/m/Y à H:i') }}</p>
        </div>
    </div>
    
    
    <p class="body mb-0">{{ comment.content|nl2br }}</p>
    {% if comment.updatedAt %}
        <p class="small text-muted text-end">Dernière mise à jour le {{ comment.updatedAt|date('d/m/Y à H:i') }}</p>
    {% endif %}
</div>