{% extends "admin/admin_layout.html.twig" %}

{% block title %}
    Editer un article | {{ parent() }}
{% endblock %}

{% block page_title %}Editer <strong>{{ post.title }}</strong>{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/sceditor/themes/default.min.css">
{% endblock %}

{% block javascripts %}
    <script src="/sceditor/sceditor.min.js"></script>
    <script src="/sceditor/icons/monocons.js"></script>
    <script src="/sceditor/formats/bbcode.js"></script>
    <script src="/sceditor/fr.js"></script>
    <script src="/js/editor.js"></script>
{% endblock %}

{% block breadcrumb_items %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb justify-content-end">
            <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_admin_post_index') }}">Articles</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_admin_post_show', {id: post.id}) }}">{{ post.title }}</a></li>
            <li class="breadcrumb-item active">Editer</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <div class="float-end">
                {% include "admin/post/_delete_form.html.twig" %}
                <a href="{{ path('app_article_show', {slug: post.slug}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i> Consulter</a>
            </div>
            <h2 class="card-title">Editer un article</h2>
        </div>
        <div class="card-body">
            {{ form|raw }}
        </div>
    </div>
{% endblock %}