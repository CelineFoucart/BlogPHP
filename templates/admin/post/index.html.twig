{% extends "admin/admin_layout.html.twig" %}

{% block title %}
    Liste des articles | {{ parent() }}
{% endblock %}

{% block page_title %}Administration des articles{% endblock %}

{% block breadcrumb_items %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb justify-content-end">
            <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Dashboard</a></li>
            <li class="breadcrumb-item active">Articles</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <div class="float-end">
            <a href="{{ path('app_admin_post_create') }}" class="btn btn-light btn-sm border"><i class="fas fa-plus-circle"></i> Ajouter</a>
        </div>
        <h2 class="card-title">Liste des articles</h2>
        
    </div>
    <div class="card-body">
        <table id="table" class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Date de création</th>
                    <th>Dernière mise à jour</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for post in pagination.elements %}
                    <tr>
                        <td>
                            <a href="{{ path('app_article_show', {slug: post.slug}) }}">{{ post.title }}</a>
                        </td>
                        <td>{{ post.author.username }}</td>
                        <td>{{ post.createdAt|date('d/m/Y H:i') }}</td>
                        <td>{{ post.updatedAt|date('d/m/Y H:i') }}</td>
                        <td class="text-end">
                            <a href="{{ path('app_admin_post_show', {id: post.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_admin_post_edit', {id: post.id}) }}" class="btn btn-success btn-sm">
                                <i class="fas fa-pencil-alt"></i> Editer
                            </a>
                            {% include "admin/post/_delete_form.html.twig" %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun article</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        {% set count = pagination.count %}
        <div class="d-flex align-items-center justify-content-end">
            <p class="mb-0 me-1">
                <strong>{{ count }}</strong> article{{ count > 1 ? 's' : '' }} sur 
                <strong>{{ pagination.numberItems }}</strong> article{{ pagination.numberItems > 1 ? 's' : '' }}.
            </p>

            {{ pagination(pagination) }}
        </div>
    </div>
</div>
{% endblock %}