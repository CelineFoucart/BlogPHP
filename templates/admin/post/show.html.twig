{% extends "admin/admin_layout.html.twig" %}

{% block title %}
    Voir "{{ post.title }}" | {{ parent() }}
{% endblock %}

{% block page_title %}Voir <strong>{{ post.title }}</strong>{% endblock %}

{% block breadcrumb_items %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb justify-content-end">
            <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_admin_post_index') }}">Articles</a></li>
            <li class="breadcrumb-item active">{{ post.title }}</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <div class="float-end">
                <a href="{{ path('app_admin_post_edit', {id: post.id}) }}" class="btn btn-success btn-sm">
                    <i class="fas fa-pencil-alt"></i> Editer
                </a>
                {% include "admin/post/_delete_form.html.twig" %}
                <a href="{{ path('app_article_show', {slug: post.slug}) }}" class="btn btn-sm btn-primary">
                    <i class="fas fa-eye"></i> Consulter
                </a>
            </div>
            <h2 class="card-title">{{ post.title }}</h2>
            <p class="text-muted small">
                Créé le {{ post.createdAt|date('d/m/Y, H:i') }} par {{ post.author.username }}
            </p>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped m-0">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ post.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ post.title }}</td>
                    </tr>
                    <tr>
                        <th>Lien</th>
                        <td>{{ post.slug }}</td>
                    </tr>
                    <tr>
                        <th>Mise à jour</th>
                        <td>{{ post.updatedAt ? post.updatedAt|date('d/m/Y, H:i') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ post.description }}</td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>{{ post.content|parse_bbcode }}</td>
                    </tr>
                </tbody>
            </table>
        </div> 
    </div>
{% endblock %}